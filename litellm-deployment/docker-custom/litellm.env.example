# LiteLLM Environment Configuration
# This file contains environment variables for LiteLLM deployment

# Database Configuration (Required)
# DATABASE_URL=postgresql://user:password@host:port/database

# Master Key (Optional - will be auto-generated if not provided)
# LITELLM_MASTER_KEY=sk-your-master-key-here

# User Header Configuration
USER_HEADER_NAME=X-OpenWebUI-User-Email

# Cost Tracking Settings
DISABLE_END_USER_COST_TRACKING=false
DISABLE_END_USER_COST_TRACKING_PROMETHEUS_ONLY=false

# Model Configurations
# Format: LITELLM_MODEL_<NAME>=model=<model>,api_base=<base_url>,api_key=<key>
# Examples:
# LITELLM_MODEL_GPT4=model=openai/gpt-4,api_base=https://api.openai.com/v1,api_key=${OPENAI_API_KEY}
# LITELLM_MODEL_CLAUDE=model=anthropic/claude-3-opus-20240229,api_base=https://api.anthropic.com/v1,api_key=${ANTHROPIC_API_KEY}
# LITELLM_MODEL_LOCAL=model=openai/llama3.1:70b,api_base=http://localhost:11434/v1,api_key=ollama

# Extra Headers (comma-separated)
# LITELLM_EXTRA_HEADERS=X-User-Id,X-Organization-Id

# Optional LiteLLM Settings
# LITELLM_DROP_PARAMS=false
# LITELLM_MAX_PARALLEL_REQUESTS=100
# LITELLM_NUM_RETRIES=3
# LITELLM_REQUEST_TIMEOUT=600
# LITELLM_TELEMETRY=false

# Router Settings (Optional)
# LITELLM_ROUTER_STRATEGY=simple-shuffle
# LITELLM_ROUTER_REDIS_HOST=localhost
# LITELLM_ROUTER_REDIS_PORT=6379
# LITELLM_ROUTER_REDIS_PASSWORD=