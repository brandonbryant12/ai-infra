# LiteLLM Configuration
# Copy this file to litellm.env and fill in your actual values

# API Keys
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Server Configuration
LITELLM_PORT=4000
LITELLM_VERBOSE=true
LITELLM_LOG_LEVEL=DEBUG

# UI Authentication
UI_USERNAME=admin
UI_PASSWORD=your-secure-password-here

# Security Keys
LITELLM_MASTER_KEY=your-master-key-here
LITELLM_SALT_KEY=your-salt-key-here

# Proxy Configuration
PROXY_BASE_URL=https://your-domain.com

# Database Configuration (for PostgreSQL)
DATABASE_URL=postgresql://litellm:litellm@postgres:5432/litellm

# Langfuse Configuration (optional - for observability)
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key-here
LANGFUSE_SECRET_KEY=your-langfuse-secret-key-here
LANGFUSE_HOST=http://localhost:3000

# Additional API Keys (uncomment and add as needed)
# OPENAI_API_KEY=your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# GROQ_API_KEY=your-groq-api-key-here